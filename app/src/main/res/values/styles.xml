<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme.LoginButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/darkGrey</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ThemeOverlay.TextInputEditText.OutlinedBox" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="passwordToggleTint">@android:color/white</item>
    </style>

</resources>
